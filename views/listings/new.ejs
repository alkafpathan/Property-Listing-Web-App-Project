<% layout("/layouts/boilerplate") %>

    <body class="">
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3 class="mb-3">Create a New Listing</h3>

                <form method="post" action="/listings" novalidate class="needs-validation" 
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control"
                            required>
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Please enter a valid title</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" rows="3" required></textarea>
                        <div class="valid-feedback">Description looks good!</div>
                        <div class="invalid-feedback">Please enter a valid description</div>
                    </div>

                    <!-- <div class="mb-3">
                        <label for="url" class="form-label">Image URL</label>
                        <input type="text" name="listing[url]" placeholder="Enter image URL/link" class="form-control">
                        <div class="valid-feedback">Image URL looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Image URL</div>
                    </div> -->
                    <div class="mb-3">
                        <label for="url" class="form-label">Upload image</label>
                        <input type="file" name="listing[image]" placeholder="Enter image URL/link" class="form-control">
                        <div class="valid-feedback">Image looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Image URL</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" placeholder="Enter Price" class="form-control"
                                    required type="number">
                                <div class="valid-feedback">Price looks good!</div>
                                <div class="invalid-feedback">Please enter a valid price</div>
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <div class="mb-3">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" name="listing[country]" placeholder="Enter country"
                                    class="form-control" required>
                                <div class="valid-feedback">Country Name looks good!</div>
                                <div class="invalid-feedback">Please enter a country name</div>
                            </div>
                        </div>
                    </div>




                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control"
                            required>
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Please enter a valid location</div>
                    </div>

                    <button class="btn add-btn w-100 mb-5 mt-3">Add Listing</button>
                </form>
            </div>
        </div>

    </body>