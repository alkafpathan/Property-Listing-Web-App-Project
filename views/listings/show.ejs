<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_KEY %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>
<link rel="stylesheet" href="/css/showpage.css">

<body>
  <div class="page-container">

    <!-- Listing Card -->
    <div class="listing-container">
      <img src="<%= listing.image.url %>" alt="Listing image" class="listing-image">

      <div class="listing-details">
        <h3><%= listing.title %></h3>
        <p class="owner-info">Owned by @<%= listing.owner.username %></p>
        <div class="listing-info">
          <p><%= listing.description %></p>
          <p class="price">₹<%= listing.price.toLocaleString("en-IN") %> / night</p>
          <p><b>Location:</b> <%= listing.location %>, <%= listing.country %></p>
        </div>

        <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
          <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-outline-dark px-4">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Reviews -->
    <% if (currUser) { %>
      <div class="review-section">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation mt-3">
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1" title="Terrible">1</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2" title="Not good">2</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3" title="Average">3</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4" title="Good">4</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5" title="Excellent">5</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea required class="form-control" name="review[comment]" rows="4"></textarea>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
    <% } %>

    <% if (listing.reviews.length > 0) { %>
      <div class="review-section">
        <h4>All Reviews</h4>
        <% for (review of listing.reviews) { %>
          <div class="review-card">
            
            <div class="review-content">
              <div class="review-top">
                <div class="review-avatar" style="display: inline;">
                  <%= review.author.username.charAt(0).toUpperCase() %>
                </div>
                <h5 style="display: inline;">@<%= review.author.username %></h5>
              </div>
              
              <p class="starability-result" data-rating="<%= review.rating %>"></p>
              <p><%= review.comment %></p>
              <% if (currUser && review.author._id.equals(currUser._id)) { %>
                <form action="/listings/<%= listing.id %>/reviews/<%= review._id%>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-outline-dark mt-2">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>

    <!-- Map Section -->
    <div class="map-section mb-5">
      <h4>Where you’ll be</h4>
      <div id="map"></div>
    </div>

  </div>

  <script src="/js/map.js"></script>
</body>
